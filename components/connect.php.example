<?php
/**
 * Database Connection Configuration
 * 
 * IMPORTANT: 
 * 1. Copy this file to 'connect.php'
 * 2. Update the database credentials below
 * 3. Never commit connect.php to version control (it's in .gitignore)
 */

// Database Configuration
$db_host = 'localhost';          // Database host (usually 'localhost')
$db_name = 'eleas_v3';          // Database name
$db_user = 'root';              // Database username (change for production)
$db_password = '';              // Database password (change for production)

// Establish PDO connection
try {
    $conn = new PDO("mysql:host=$db_host;dbname=$db_name", $db_user, $db_password);
    $conn->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    $conn->setAttribute(PDO::ATTR_DEFAULT_FETCH_MODE, PDO::FETCH_ASSOC);
} catch(PDOException $e) {
    // In production, log this error instead of displaying it
    die("Database Connection Failed: " . $e->getMessage());
}
?>

